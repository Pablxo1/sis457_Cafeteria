@model WebCafeteria.Models.Producto

@{
    ViewData["Title"] = "Editar Producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="dark-background min-vh-100 py-4" style="background: #9C5D3B; font-family: var(--nav-font); color: var(--nav-color);">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-7 col-lg-6">
                <h1 class="mb-0" style="color: var(--nav-hover-color); font-family: var(--nav-font);">
                    <i class="bi bi-pencil-square me-2" style="color: #cd853f;"></i> Editar Producto
                </h1>
                <div class="card shadow-sm rounded-3">
                   
                    <div class="card-body p-4" style="background-color:#ffefd5">
                        <div class="d-flex justify-content-between align-items-center mb-4">
                        </div>
                        <form asp-action="Edit" autocomplete="off" style="background-color:#ffefd5">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                            <input type="hidden" asp-for="Id" />
                            <input type="hidden" asp-for="UsuarioRegistro" />
                            <input type="hidden" asp-for="FechaRegistro" />
                            <input type="hidden" asp-for="Estado" />
                            <div class="mb-3">
                                <label asp-for="IdCategoria" class="form-label">Categoría</label>
                                <select asp-for="IdCategoria" class="form-select" asp-items="ViewBag.IdCategoria"></select>
                                <span asp-validation-for="IdCategoria" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Codigo" class="form-label">Código</label>
                                <input asp-for="Codigo" class="form-control" />
                                <span asp-validation-for="Codigo" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Nombre" class="form-label">Nombre</label>
                                <input asp-for="Nombre" class="form-control" />
                                <span asp-validation-for="Nombre" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Descripcion" class="form-label">Descripción</label>
                                <input asp-for="Descripcion" class="form-control" />
                                <span asp-validation-for="Descripcion" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Saldo" class="form-label">Saldo</label>
                                <input asp-for="Saldo" class="form-control" type="number" />
                                <span asp-validation-for="Saldo" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="PrecioVenta" class="form-label">Precio de Venta</label>
                                <input asp-for="PrecioVenta" class="form-control" type="number" />
                                <span asp-validation-for="PrecioVenta" class="text-danger"></span>
                            </div>
                            <div class="d-flex justify-content-end gap-2 mt-4">
                                <button type="submit" class="btn btn-animado" style="background: #cd853f; color: var(--nav-hover-color); border: 1.5px solid var(--accent-color); border-radius: 50px; font-weight: 500;">
                                    <i class="bi bi-save me-1"></i> Guardar Cambios
                                </button>
                                <a asp-action="Index" class="btn btn-animado" style="background: #b8860b; color: var(--nav-hover-color); border: 1.5px solid var(--accent-color); border-radius: 50px; font-weight: 500;">
                                    <i class="bi bi-x-circle me-1"></i> Cancelar
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
@{
    ViewData["OcultarFooter"] = true;
}