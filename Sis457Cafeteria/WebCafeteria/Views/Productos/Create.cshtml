@model WebCafeteria.Models.Producto
@{
    ViewData["Title"] = "Crear Producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="dark-background min-vh-100 py-4" style="background: #9C5D3B; font-family: var(--nav-font); color: var(--nav-color);">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="mb-0" style="color: var(--nav-hover-color); font-family: var(--nav-font);">
                <i class="bi bi-plus-circle me-2" style="color: var(--accent-color);"></i> Nuevo Producto
            </h1>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-7">
                <div class="card shadow-sm rounded-3" style="background-color:#ffefd5">
                    <div class="card-body p-4">
                        <form asp-action="Create" autocomplete="off">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                            <div class="mb-3">
                                <label class="control-label">Categoria</label>
                                <select asp-for="IdCategoria" class="form-select" asp-items="ViewBag.IdCategoria"></select>
                                <span asp-validation-for="IdCategoria" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label class="control-label">Codigo</label>
                                <input asp-for="Codigo" class="form-control" />
                                <span asp-validation-for="Codigo" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label class="control-label">Nombre</label>
                                <input asp-for="Nombre" class="form-control" />
                                <span asp-validation-for="Nombre" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label class="control-label">Descripcion</label>
                                <input asp-for="Descripcion" class="form-control" />
                                <span asp-validation-for="Descripcion" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label class="control-label">Saldo</label>
                                <input asp-for="Saldo" type="number" class="form-control" />
                                <span asp-validation-for="Saldo" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label class="control-label">Precio de Venta</label>
                                <input asp-for="PrecioVenta" type="number" class="form-control" />
                                <span asp-validation-for="PrecioVenta" class="text-danger"></span>
                            </div>
                            <div class="d-flex justify-content-end gap-2 mt-4">
                                <button type="submit" class="btn btn-animado" style="background: #ff9e03; color: var(--nav-hover-color); border: 1.5px solid var(--accent-color); border-radius: 50px; font-weight: 500;">
                                    <i class="bi bi-check-circle me-1"></i> Guardar
                                </button>
                                <a asp-action="Index" class="btn btn-animado" style="background: #b8860b; color: var(--nav-hover-color); border: 1.5px solid var(--accent-color); border-radius: 50px; font-weight: 500;">
                                    <i class="bi bi-x-circle me-1"></i> Cancelar
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
@{
    ViewData["OcultarFooter"] = true;
}