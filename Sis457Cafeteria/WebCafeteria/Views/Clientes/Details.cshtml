@model WebCafeteria.Models.Cliente

@{
    ViewData["Title"] = "Detalles del Cliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="dark-background min-vh-100 py-4" style="background: #9C5D3B; font-family: var(--nav-font); color: var(--nav-color);">
    <div class="container">
        <div class="row justify-content-center">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="mb-0" style="color: var(--nav-hover-color); font-family: var(--nav-font);">
                    <i class="bi bi-eye me-2" style="color: #b8860b;"></i> Detalles del Cliente
                </h1>
            </div>
            <div class="col-md-7 col-lg-6">
                <div class="card shadow-sm rounded-3" style="background-color:#ffefd5">
                    <div class="card-body p-4" style="background-color:#ffefd5">
                        <div class="d-flex justify-content-between align-items-center mb-4" style="background-color:#ffefd5">
                            <a asp-action="Index" class="btn btn-animado" style="background: #b8860b; color: var(--nav-hover-color); border: 1.5px solid var(--accent-color); border-radius: 50px; font-weight: 500;">
                                <i class="bi bi-arrow-left me-1"></i> Volver
                            </a>
                        </div>
                        <dl class="row mb-0">
                            <dt class="col-sm-4">Cédula de Identidad</dt>
                            <dd class="col-sm-8">@Model.CedulaIdentidad</dd>
                            <dt class="col-sm-4">Nombres</dt>
                            <dd class="col-sm-8">@Model.Nombres</dd>
                            <dt class="col-sm-4">Apellidos</dt>
                            <dd class="col-sm-8">@Model.Apellidos</dd>
                            <dt class="col-sm-4">Usuario Registro</dt>
                            <dd class="col-sm-8">@Model.UsuarioRegistro</dd>
                            <dt class="col-sm-4">Fecha de Registro</dt>
                            <dd class="col-sm-8">@Model.FechaRegistro.ToString("dd/MM/yyyy HH:mm")</dd>
                            <dt class="col-sm-4">Estado</dt>
                            <dd class="col-sm-8">
                                @if (Model.Estado == 1)
                                {
                                    <span class="badge bg-success">Activo</span>
                                }
                                else if (Model.Estado == 0)
                                {
                                    <span class="badge bg-secondary">Inactivo</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Eliminado</span>
                                }
                            </dd>
                        </dl>
                        <div class="d-flex justify-content-end gap-2 mt-4">
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-animado" style="background: #cd853f; color: var(--nav-hover-color); border: 1.5px solid var(--accent-color); border-radius: 50px; font-weight: 500;">
                                <i class="bi bi-pencil-square me-1"></i> Editar
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@{
    ViewData["OcultarFooter"] = true;
}