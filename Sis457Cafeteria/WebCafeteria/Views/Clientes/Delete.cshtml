@model WebCafeteria.Models.Cliente
@{
    ViewData["Title"] = "Eliminar Cliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="dark-background min-vh-100 py-4" style="background: #9C5D3B; font-family: var(--nav-font); color: var(--nav-color);">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-7 col-lg-6">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h1 class="mb-0" style="color: var(--nav-hover-color); font-family: var(--nav-font);">
                        <i class="bi bi-trash3-fill me-2" style="color: #ff6347;"></i> Eliminar Cliente
                    </h1>
                </div>
                <div class="card shadow-sm rounded-3">
                    <div class="card-body p-4">
                        <div class="alert alert-warning d-flex align-items-center" role="alert">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>
                            ¿Está seguro que desea eliminar al cliente <strong class="mx-1">@Model.Nombres @Model.Apellidos</strong>?
                        </div>
                        <dl class="row mb-4">
                            <dt class="col-sm-4">Cédula de Identidad</dt>
                            <dd class="col-sm-8">@Model.CedulaIdentidad</dd>
                            <dt class="col-sm-4">Nombres</dt>
                            <dd class="col-sm-8">@Model.Nombres</dd>
                            <dt class="col-sm-4">Apellidos</dt>
                            <dd class="col-sm-8">@Model.Apellidos</dd>
                        </dl>
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="Id" />
                            <div class="d-flex justify-content-end gap-2">
                                <button type="submit" class="btn btn-animado" style="background: #ff6347; color: var(--nav-hover-color); border: 1.5px solid #ff6347; border-radius: 50px; font-weight: 500;">
                                    <i class="bi bi-trash3 me-1"></i> Eliminar
                                </button>
                                <a asp-action="Index" class="btn btn-animado" style="background: #b8860b; color: var(--nav-hover-color); border: 1.5px solid var(--accent-color); border-radius: 50px; font-weight: 500;">
                                    <i class="bi bi-x-circle me-1"></i> Cancelar
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
@{
    ViewData["OcultarFooter"] = true;
}