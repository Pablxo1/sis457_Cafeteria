@model WebCafeteria.Models.Cliente

@{
    ViewData["Title"] = "Editar Cliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="dark-background min-vh-100 py-4" style="background: #9C5D3B; font-family: var(--nav-font); color: var(--nav-color);">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-7 col-lg-6">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h1 class="mb-0" style="color: var(--nav-hover-color); font-family: var(--nav-font);">
                        <i class="bi bi-pencil-square me-2" style="color: #cd853f;"></i> Editar Cliente
                    </h1>
                </div>
                <div class="card shadow-sm rounded-3" style="background:#ffefd5">
                    <div class="card-body p-4">
                        <form asp-action="Edit" autocomplete="off">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                            <input type="hidden" asp-for="Id" />
                            <input type="hidden" asp-for="UsuarioRegistro" />
                            <input type="hidden" asp-for="FechaRegistro" />
                            <input type="hidden" asp-for="Estado" />
                            <div class="mb-3">
                                <label asp-for="CedulaIdentidad" class="form-label">Cédula de Identidad</label>
                                <input asp-for="CedulaIdentidad" class="form-control" type="number" />
                                <span asp-validation-for="CedulaIdentidad" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Nombres" class="form-label">Nombres</label>
                                <input asp-for="Nombres" class="form-control" />
                                <span asp-validation-for="Nombres" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Apellidos" class="form-label">Apellidos</label>
                                <input asp-for="Apellidos" class="form-control" />
                                <span asp-validation-for="Apellidos" class="text-danger"></span>
                            </div>
                            <div class="d-flex justify-content-end gap-2 mt-4">
                                <button type="submit" class="btn btn-animado" style="background: #cd853f; color: var(--nav-hover-color); border: 1.5px solid var(--accent-color); border-radius: 50px; font-weight: 500;">
                                    <i class="bi bi-save me-1"></i> Guardar Cambios
                                </button>
                                <a asp-action="Index" class="btn btn-animado" style="background: #b8860b; color: var(--nav-hover-color); border: 1.5px solid var(--accent-color); border-radius: 50px; font-weight: 500;">
                                    <i class="bi bi-x-circle me-1"></i> Cancelar
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
@{
    ViewData["OcultarFooter"] = true;
}