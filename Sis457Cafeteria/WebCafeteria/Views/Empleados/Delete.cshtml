@model WebCafeteria.Models.Empleado
@{
    ViewData["Title"] = "Eliminar Empleado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="dark-background min-vh-100 py-4" style="background: #9C5D3B; font-family: var(--nav-font); color: var(--nav-color);">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-7">
                <div class="card shadow-sm rounded-3">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <h1 class="mb-0" style="color: var(--nav-hover-color); font-family: var(--nav-font);">
                                <i class="bi bi-trash3-fill me-2" style="color: #ff6347;"></i> Eliminar Empleado
                            </h1>
                        </div>
                        <div class="alert alert-warning d-flex align-items-center" role="alert">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>
                            ¿Está seguro que desea eliminar el empleado <strong class="mx-1">@Model.Nombres @Model.PrimerApellido</strong>?
                        </div>
                        <dl class="row mb-4">
                            <dt class="col-sm-4">Cédula</dt>
                            <dd class="col-sm-8">@Model.CedulaIdentidad</dd>
                            <dt class="col-sm-4">Nombres</dt>
                            <dd class="col-sm-8">@Model.Nombres</dd>
                            <dt class="col-sm-4">Primer Apellido</dt>
                            <dd class="col-sm-8">@Model.PrimerApellido</dd>
                            <dt class="col-sm-4">Segundo Apellido</dt>
                            <dd class="col-sm-8">@Model.SegundoApellido</dd>
                            <dt class="col-sm-4">Dirección</dt>
                            <dd class="col-sm-8">@Model.Direccion</dd>
                            <dt class="col-sm-4">Celular</dt>
                            <dd class="col-sm-8">@Model.Celular</dd>
                            <dt class="col-sm-4">Cargo</dt>
                            <dd class="col-sm-8">@Model.Cargo</dd>
                        </dl>
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="Id" />
                            <div class="d-flex justify-content-end gap-2">
                                <button type="submit" class="btn btn-animado" style="background: #ff6347; color: var(--nav-hover-color); border: 1.5px solid #ff6347; border-radius: 50px; font-weight: 500;">
                                    <i class="bi bi-trash3 me-1"></i> Eliminar
                                </button>
                                <a asp-action="Index" class="btn btn-animado" style="background: #b8860b; color: var(--nav-hover-color); border: 1.5px solid var(--accent-color); border-radius: 50px; font-weight: 500;">
                                    <i class="bi bi-x-circle me-1"></i> Cancelar
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
@{
    ViewData["OcultarFooter"] = true;
}